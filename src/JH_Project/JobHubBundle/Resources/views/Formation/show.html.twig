{% extends "JobHubBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Modifier Experience{% endblock %}

{% block navbar %}
{{ parent() }}
{% endblock %}

{% block contenu %}
<div class="bloc_info">
	<div class="clearfix contenu_header">
		<div class="pull-left">	<h2> Détails Formation </h2></div>
		<div class="pull-right bloc_info_right_link">
		<a class="bloc_info_right_link" href="{{ path('candidat_profile_formation_edit', { 'id': entity.id }) }}">Modifier</a> | 
		<a class="bloc_info_right_link" href="{{ path('candidat_profile_formation_delete', { 'id': entity.id }) }}">Delete</a> | 
		<a class="bloc_info_right_link" href="{{ path('job_hub_candidat_show') }}">Retour</a>
		</div>
	</div>
	
	<div class="candidat_profil_form">
	<table class="record_properties">
		<tbody>
			<tr>
                <th>Annee debut</th>
                <td>{{ entity.anneeDebut|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Annee fin</th>
                <td>{{ entity.anneeFin|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Libellé de votre diplôme</th>
                <td>{{ entity.anneeFin|date('Y-m-d') }}</td>
            </tr> 
            <tr>
                <th>Etablissement</th>
                <td>{{ entity.etablissement }}</td>
            </tr> 
            <tr>
                <th>Niveau d'études du diplôme</th>
                <td>{{ entity.niveauEtudes }}</td>
            </tr>
            <tr>
                <th>Diplôme obtenu</th>
                <td>{{ entity.diplomeObtenu }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
		</table>
	</div>

</div>
{% endblock %} 


{% block sidebar %}
{{ render(controller( 'JobHubBundle:JobHub:bloc',  {'nom_rubrique': 'faq'} )) }}
{{ render(controller( 'JobHubBundle:JobHub:bloc',  {'nom_rubrique': 'conseil'} )) }}
{% endblock %} 

{% block footer %}
{{ parent() }}
{% endblock %}

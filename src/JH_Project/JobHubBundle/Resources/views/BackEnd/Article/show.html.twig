
{% extends "JobHubBundle::admin_layout.html.twig" %}


{% block page_title %}
<div class="navbar-header">
	<h2>Article</h2>
</div>
<ul class="entity_actions pull-right back_to_list record_actions">
	<li>
		<a class="btn" href="{{ path('administration_article') }}">
		    Retour Ã  la liste
		</a>
	</li>
</ul>
{% endblock %}

{% block page_content %}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.titre }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ entity.etat }}</td>
            </tr>
            <tr>
                <th>Maj</th>
                <td>{{ entity.maj|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ entity.contenu }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('administration_article') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('administration_article_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}

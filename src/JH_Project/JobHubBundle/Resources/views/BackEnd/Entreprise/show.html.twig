{% extends "JobHubBundle::admin_layout.html.twig" %}


{% block title %}{{ parent() }} - administration{% endblock %}


{% block page_title %}
<h2>Information Entreprise</h2>
{% endblock %}

{% block page_content %}

    <table class="record_properties">
        <tbody>        
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.compteUser.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.compteUser.email }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{% if entity.compteUser.enabled %} OUI {% else %} NON {% endif %}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.compteUser.password }}</td>
            </tr>
            <tr>
                <th>Lastlogin</th>
                <td>{{ entity.compteUser.lastLogin|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Locked</th>
                <td>{{ entity.compteUser.locked }}</td>
            </tr>
            <tr>
                <th>Expired</th>
                <td>{{ entity.compteUser.expired }}</td>
            </tr>
            <tr>
                <th>Credentialsexpired</th>
                <td>{{ entity.compteUser.credentialsExpired }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Raisonsociale</th>
                <td>{{ entity.raisonSociale }}</td>
            </tr>
            <tr>
                <th>Contactemail</th>
                <td>{{ entity.contactEmail }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ entity.adresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ entity.telephone }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ entity.fax }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ entity.codePostal }}</td>
            </tr>
            <tr>
                <th>Siteweb</th>
                <td>{{ entity.siteWeb }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('administration_entreprise') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('administration_entreprise_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
